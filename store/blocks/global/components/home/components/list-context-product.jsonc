{
  "flex-layout.row#product-list": {
    "children": [
      "list-context.product-list#products"
    ]
  },
  "list-context.product-list#products": {
    "blocks": [
      "product-summary.shelf"
    ],
    "children": [
      "slider-layout#products"
    ]
  },
  "product-summary.shelf": {
    "children": [
      "product-summary-image",
      "product-summary-price",
      "product-summary-name",
      "add-to-cart-button"
    ]
  },
  "product-summary-image": {
    "props": {
      "showBadge": true,
      "height": 220
    }
  },
  "product-summary-price": {
    "props": {
      "showListPrice": false
    }
  },

  "slider-layout#products": {
    "title": "home_slider--listProduct",
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 2,
        "mobile": 1
      },
      "infinite": true,
      "blockClass": "home__slider",
      "showPaginationDots": "never"
    }
  }
}
